# Compiler
FC = mpif90
# Compile Flags
FCFLAGS=-O3 -cpp -ffree-form -ffast-math -ftree-vectorize -funroll-loops -fallow-argument-mismatch \
    -ffree-line-length-none   
FCFLAGS+=-fopenmp -D_OMP
FCFLAGS+=-D_MPI08
# MKL libraries 
FCFLAGS+=-I${MKLROOT}/include/intel64/lp64 -m64 -I${MKLROOT}/include
LDFLAGS=${MKLROOT}/lib/intel64/libmkl_blas95_lp64.a \
    ${MKLROOT}/lib/intel64/libmkl_lapack95_lp64.a \
    -L${MKLROOT}/lib/intel64 -lmkl_scalapack_lp64 -Wl,--no-as-needed -lmkl_gf_lp64 \
    -lmkl_sequential -lmkl_core -lmkl_blacs_intelmpi_lp64 -lpthread -lm -ldl
